<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow the app to connect to localhost for the backend API -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- Allow file access for reading PDFs and CFDIs -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Allow read access to documents -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>

    <!-- Allow the app to inherit entitlements (for sidecar) -->
    <key>com.apple.security.inherit</key>
    <true/>

    <!-- App Sandbox (disabled for local file access) -->
    <key>com.apple.security.app-sandbox</key>
    <false/>

    <!-- Hardened runtime -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <false/>

    <!-- Allow DYLD environment variables (needed for some Python libraries) -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>

    <!-- JIT compilation (for performance) -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
</dict>
</plist>
